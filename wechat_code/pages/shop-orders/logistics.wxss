.outerBox {
/* 最外层的盒子 */
width: 100%;
font-size: 24rpx;
}

.navBox {
/* 头部样式 */
padding: 18rpx;
border-bottom: 2rpx solid rgb(236, 236, 236);
}

.navBox,
.navLeftBox {
/* 头部内容样式 */
display: flex;
align-items: center;
justify-content: space-between;
font-size: 12px;
}

.navLeftBox view {
/* 头部左边的样式 */
margin-left: 10rpx;
}

.navRightBox text {
/* 头部右边的样式 */
margin-left: 10rpx;
}

.navRightBox text:nth-child(2) {
/* 头部竖线文字颜色 */
color: rgb(226, 225, 225);
}

.navBox image {
/* 图片样式 */
width: 46rpx;
height: 46rpx;
border-radius: 50%;
}

.contantBox {
/* 物流信息整体样式 */
padding: 0 18rpx;
}

.itemBox {
width: 100%;
display: flex;
}

.itemLeftBox {
/* 左边一整条竖线外层盒子的样式 */
position: relative;
width: 62rpx;
}

.lineBox {
/* 左边一整条竖线的样式 */
width: 100%;
height: 100%;
display: flex;
flex-direction: column;
padding-left: 28rpx;
}

.longLineBox {
/* 线的样式 */
background-color: rgb(215, 215, 215);
}

.topLineBox {
/* 线的样式 */
width: 1px;
height: 50rpx;
}

.bomLineBox {
/* 线的样式 */
flex: 1;
width: 1px;
}

.newestIconBox {
/* 最新物流信息icon样式 */
position: absolute;
top: 36rpx;
left: 9rpx;
width: 40rpx;
height: 40rpx;
}

.dotBox {
/* 圆点样式 */
position: absolute;
top: 44rpx;
left: 20rpx;
width: 18rpx;
height: 18rpx;
border-radius: 50%;
background-color: rgb(201, 201, 201);
}

.rightBigBox {
/* 右边物流信息每一个节点的样式 */
flex: 1;
padding: 38rpx 0;
}

.borderBomBox {
/* 物流信息下划线 */
border-bottom: 1px solid rgb(243, 241, 241);
}

.oldTxtBox {
/* 之前物流信息文字样式 */
color: rgb(159, 159, 159);
}


.timeBox {
/* 时间样式 */
margin-top: 4rpx;
font-size: 20rpx;
}


.notBox {
/* 暂无物流信息样式 */
padding: 20rpx 0;
text-align: center;
color: rgb(159, 159, 159);
}